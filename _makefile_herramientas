$(DIR_HERRAMIENTAS_PROYECTO)tabla_animaciones.cpp
	$(CC) $(CFLAGS) $(INCLUDES) $(DIR_HERRAMIENTAS_PROYECTO)tabla_animaciones.cpp -o $(DIR_O)tabla_animaciones.o 

